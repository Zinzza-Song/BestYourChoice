<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/homeimage"
    tools:context=".Goople_MainActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="199dp"
        android:layout_height="30dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@drawable/main_name"
        android:text=""
        android:layout_gravity="center"
        android:layout_marginTop="80dip"
        android:id="@+id/textView"
        android:layout_weight="0.10" />

    <Button
        android:layout_width="130dip"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dip"
        android:background="@drawable/main_but1"
        android:text=""
        android:id="@+id/Button1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dip" />

    <Button
        android:layout_width="130dip"
        android:layout_height="35dp"
        android:background="@drawable/main_but2"
        android:layout_gravity="center"
        android:id="@+id/Button2"
        android:layout_weight="0.03" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dip" />


    <Button
        android:layout_width="130dip"
        android:layout_height="37dp"
        android:background="@drawable/main_but3"
        android:text=""
        android:layout_gravity="center"
        android:id="@+id/Button3"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dip" />


    <Button
        android:layout_width="130dip"
        android:layout_height="38dp"
        android:background="@drawable/main_but4"
        android:text=""
        android:layout_gravity="center"
        android:id="@+id/Button4"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dip" />


</LinearLayout>